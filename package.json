{
  "name": "site",
  "version": "0.0.0-development",
  "description": "My personal potfolio website. Built with Next.js, Tailwind CSS, and TypeScript.",
  "private": true,
  "engines": {
    "node": "^22.11.0",
    "npm": "^10.5.0"
  },
  "volta": {
    "node": "^22.11.0",
    "npm": "^10.5.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint:check": "biome check .",
    "lint": "biome check . --write",
    "spell:check": "cspell \"{README.md,CODE_OF_CONDUCT.md,CONTRIBUTING.md,.github/*.md,**/*.tsx,**/*.ts}\"",
    "test:setup": "playwright install --with-deps --force && playwright install --force msedge",
    "test": "CI=true playwright test",
    "type:check": "tsc --noEmit",
    "prepare": "husky",
    "cz": "cz",
    "deploy": "node --no-warnings ./scripts/deploy.js"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "^15.0.3",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-icons": "1.3.2",
    "@radix-ui/react-navigation-menu": "^1.2.1",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "axios": "^1.7.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "framer-motion": "11.11.17",
    "next": "14.2.18",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intersection-observer": "9.13.1",
    "react-social-icons": "6.18.0",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@playwright/test": "^1.49.0",
    "@ryansonshine/commitizen": "^4.2.8",
    "@ryansonshine/cz-conventional-changelog": "^3.3.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/github": "^10.3.5",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/axios": "^0.9.36",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "cspell": "8.16.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "16.4.5",
    "esbuild": "^0.24.0",
    "esbuild-loader": "^4.2.2",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "husky": "9.1.7",
    "lucide-react": "^0.461.0",
    "postcss": "^8",
    "semantic-release": "^24.2.0",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "winston": "3.17.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
